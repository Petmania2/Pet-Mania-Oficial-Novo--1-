<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Mania - Login</title>
     <link rel="stylesheet" href="/css/style-login.css">

     <link rel="stylesheet" href="/css/ai-chat.css">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>


<body>
    <!-- Navbar -->
    <nav class="navbar" id="navbar">
        <section class="container navbar-container">
            <a href="/index.ejs" class="logo">
                <img src="/imagens/petlogo.png" alt="Pet Mania" class="logo-img">
            </a>
            <button class="mobile-menu-btn" id="menuBtn">☰</button>
            <ul class="nav-links" id="navLinks">
                <li><a href="/">Home</a></li>
                <li><a href="/#how-it-works">Como funciona</a></li>
                <li><a href="/#trainers">Adestradores</a></li>
                <li><a href="/#blog">Blog</a></li>
                <li><a href="/#contact">Contato</a></li>
            </ul>
        </section>
    </nav>

    <!-- Login Section -->
    <section class="login-section">
        <section class="container">
            <section class="login-grid">
                <!-- Lado Esquerdo - Formulário -->
                <section class="login-form-side">
                    <section class="login-header">
                        <h2>Bem-vindo de volta!</h2>
                        <p>Entre na sua conta para continuar</p>
                    </section>
                <form id="loginForm" novalidate>
                    <section class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required>
                        <span class="error-message" id="emailError">Por favor, insira um email válido</span>
                    </section>
                    <section class="form-group password-group">
                        <label for="password">Senha</label>
                        <div class="password-input-wrapper">
                            <input type="password" id="password" name="password" required>
                            <button type="button" class="password-toggle" onclick="togglePassword()">
                                <i class="fas fa-eye" id="passwordIcon"></i>
                            </button>
                        </div>
                        <span class="error-message" id="passwordError">A senha é obrigatória</span>
                    </section>
                    <section class="form-group">
                        <label for="tipo">Tipo de usuário</label>
                        <div style="display: flex; gap: 1rem; margin-top: 0.5rem;">
                            <label><input type="radio" name="tipo" value="cliente" checked> Cliente</label>
                            <label><input type="radio" name="tipo" value="adestrador"> Adestrador</label>
                        </div>
                    </section>
                    <section class="form-footer">
                        <section class="remember-me">
                            <input type="checkbox" id="rememberMe" name="rememberMe">
                            <label for="rememberMe">Lembrar-me</label>
                        </section>
                        <a href="#">Esqueceu a senha?</a>
                    </section>
                    <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 20px;">Entrar</button>
                </form>
                    <section class="login-options">
                        <p>Não tem uma conta?</p>
                        <a href="/tipodeusuario.ejs" class="btn btn-secondary">Criar Nova Conta</a>
                    </section>
                </section>
                
                <!-- Lado Direito - Imagem -->
                <section class="login-image-side">
                    <div class="image-container">
                        <img src="https://images.unsplash.com/photo-1601758228041-f3b2795255f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80" alt="Pessoa feliz com seu cachorro">
                        <div class="image-overlay">
                            <h3>Conecte-se com os melhores adestradores</h3>
                            <p>Transforme a vida do seu pet com profissionais qualificados</p>
                        </div>
                    </div>
                </section>
            </section>
        </section>
    </section>




    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const passwordIcon = document.getElementById('passwordIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.className = 'fas fa-eye-slash';
            } else {
                passwordInput.type = 'password';
                passwordIcon.className = 'fas fa-eye';
            }
        }
    </script>
    <script src="/js/ai-chat.js"></script>
    <script src="/js/script-login.js"></script>

</body>
</html>