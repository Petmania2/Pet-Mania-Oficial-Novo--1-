                </section>
                
                <section class="footer-contact">
                    <h3>Contato</h3>
                    <section class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <p>Av. Paulista, 1000, São Paulo - SP</p>
                    </section>
