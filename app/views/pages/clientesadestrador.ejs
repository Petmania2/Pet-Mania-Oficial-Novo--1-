<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Mania - Clientes</title>
    <link rel="stylesheet" href="/css/style-adestrador.css">
    <link rel="stylesheet" href="/css/style-clientesadestrador.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar" id="navbar">
        <section class="container navbar-container">
                 <a href="paineladestrador.ejs" class="logo">
    <img src="/imagens/petlogo.png" alt="Pet Mania" class="logo-img">
</a>
            <button class="mobile-menu-btn" id="menuBtn">☰</button>
            <ul class="nav-links" id="navLinks">
                <li><a href="paineladestrador.ejs"><i class="fas fa-home"></i> Início</a></li>
                <li><a href="clientesadestrador.ejs" class="active"><i class="fas fa-user-friends"></i> Clientes</a></li>
                <li><a href="mensagensadestrador.ejs"><i class="fas fa-comments"></i> Mensagens <span class="notif-badge">3</span></a></li>
                <li><a href="agendamentoadestrador.ejs"><i class="fas fa-calendar-alt"></i> Agendamentos</a></li>
                <li><a href="perfiladestrador.ejs"><i class="fas fa-user-circle"></i> Meu Perfil</a></li>
                <li><a href="planosadestrador.ejs"><i class="fas fa-star"></i> Planos</a></li>
                <li><a href="index.ejs" class="btn btn-logout"><i class="fas fa-sign-out-alt"></i> Sair</a></li>
            </ul>
        </section>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <section class="container">
            <section class="page-header">
                <h1><i class="fas fa-user-friends"></i> Gerenciamento de Clientes</h1>
                <section class="header-actions">
                    <section class="search-container">
                        <input type="text" id="clienteSearch" placeholder="Buscar cliente..." class="search-input">
                        <button class="btn btn-search" id="searchBtn"><i class="fas fa-search"></i></button>
                    </section>
                    <button class="btn btn-primary" id="addClienteBtn"><i class="fas fa-plus"></i> Novo Cliente</button>
                </section>
            </section>

           <!-- Filters and Statistics -->
            <section class="filters-section">
                <section class="filters">
                    <!-- Status Filter with Visual Options -->
                    <section class="filter-group">
                        <label for="filterStatus">Status</label>
                        <section class="status-filter-options">
                            <label class="status-option active-status" data-status="active">
                                <input type="checkbox" name="status[]" value="active">
                                <i class="fas fa-check-circle"></i> Ativos
                            </label>
                            <label class="status-option pending-status" data-status="pending">
                                <input type="checkbox" name="status[]" value="pending">
                                <i class="fas fa-clock"></i> Pendentes
                            </label>
                            <label class="status-option new-status" data-status="new">
                                <input type="checkbox" name="status[]" value="new">
                                <i class="fas fa-star"></i> Novos
                            </label>
                            <label class="status-option inactive-status" data-status="inactive">
                                <input type="checkbox" name="status[]" value="inactive">
                                <i class="fas fa-times-circle"></i> Inativos
                            </label>
                        </section>
                    </section>
                    
                    <!-- Service Filter -->
                    <section class="filter-group">
                        <label for="filterServico">Serviço</label>
                        <select id="filterServico" class="filter-select">
                            <option value="todos">Todos os serviços</option>
                            <option value="obediencia">Obediência Básica</option>
                            <option value="comportamento">Comportamento Avançado</option>
                            <option value="socializacao">Socialização</option>
                            <option value="problemas">Correção de Problemas</option>
                            <option value="outros">Outros</option>
                        </select>
                    </section>
                    
                    <!-- Toggle for Advanced Filters -->
                    <button type="button" class="filter-toggle" id="advancedFilterToggle">
                        <i class="fas fa-chevron-down"></i> Filtros avançados
                    </button>
                    
                    <!-- Advanced Filters (Hidden by Default) -->
                    <section class="advanced-filters" id="advancedFilters" style="display: none;">
                        <section class="filter-group">
                            <label for="filterBreed">Raça do Pet</label>
                            <select id="filterBreed" class="filter-select">
                                <option value="todos">Todas as raças</option>
                                <option value="labrador">Labrador</option>
                                <option value="golden">Golden Retriever</option>
                                <option value="pastor">Pastor Alemão</option>
                                <option value="border">Border Collie</option>
                                <option value="outros">Outras raças</option>
                            </select>
                        </section>
                        
                        <section class="filter-group">
                            <label for="filterAge">Idade do Pet</label>
                            <select id="filterAge" class="filter-select">
                                <option value="todos">Todas as idades</option>
                                <option value="filhote">Filhote (até 1 ano)</option>
                                <option value="jovem">Jovem (1-3 anos)</option>
                                <option value="adulto">Adulto (3-8 anos)</option>
                                <option value="senior">Sênior (8+ anos)</option>
                            </select>
                        </section>
                        
                        <section class="filter-group">
                            <label>Período de Início</label>
                            <section class="date-range">
                                <input type="date" id="filterStartDate" placeholder="De">
                                <span>até</span>
                                <input type="date" id="filterEndDate" placeholder="Até">
                            </section>
                        </section>
                        
                        <section class="filter-group">
                            <label for="filterProgress">Progresso</label>
                            <select id="filterProgress" class="filter-select">
                                <option value="todos">Qualquer progresso</option>
                                <option value="nao-iniciado">Não iniciado</option>
                                <option value="em-andamento">Em andamento</option>
                                <option value="quase-completo">Quase completo (>70%)</option>
                                <option value="completo">Completo</option>
                            </select>
                        </section>
                    </section>
                    
                    <!-- Active Filters (appears when filters are applied) -->
                    <section class="active-filters" id="activeFilters">
                        <!-- Active filter tags will be added here dynamically -->
                    </section>
                </section>
                
                <section class="filter-actions">
                    <button class="btn-filter reset" id="resetFilters">
                        <i class="fas fa-undo"></i> Limpar
                    </button>
                    <button class="btn-filter apply" id="applyFilters">
                        <i class="fas fa-filter"></i> Aplicar Filtros
                    </button>
                </section>
            </section>

            <!-- Client List -->
            <section class="card clients-section full-width">
                <section class="card-header">
                    <h2>Lista de Clientes</h2>
                    <section class="view-controls">
                        <button class="view-btn active" data-view="list"><i class="fas fa-list"></i></button>
                        <button class="view-btn" data-view="grid"><i class="fas fa-th-large"></i></button>
                    </section>
                </section>
                <section class="clients-table-wrapper">
                    <table class="clients-table">
                        <thead>
                            <tr>
                                <th>Cliente</th>
                                <th>Pet</th>
                                <th>Serviço</th>
                                <th>Data Início</th>
                                <th>Status</th>
                                <th>Progresso</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody id="clientesTableBody">
                            <!-- Client rows will be populated here -->
                            <tr data-id="1" class="client-row" data-status="new" data-service="obediencia">
                                <td class="client-info-cell">
                                    <section class="client-avatar" style="background-image: url('https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=80&h=80&fit=crop&crop=face');"></section>
                                    <section class="client-basic-info">
                                        <h4>Amanda Silva</h4>
                                        <p><i class="fas fa-phone"></i> (11) 98765-4321</p>
                                    </section>
                                </td>
                                <td>
                                    <span class="pet-tag dog">Rex</span>
                                    <p class="pet-breed">Golden Retriever, 2 anos</p>
                                </td>
                                <td>Obediência Básica</td>
                                <td>28/02/2025</td>
                                <td><span class="status-badge new">Novo</span></td>
                                <td>
                                    <section class="progress-bar">
                                        <section class="progress" style="width: 10%;"></section>
                                    </section>
                                    <span class="progress-text">1/10 sessões</span>
                                </td>
                                <td class="actions-cell">
                                    <button class="btn btn-small btn-icon view-details-btn" title="Ver Detalhes" data-id="1"><i class="fas fa-eye"></i></button>
                                    <button class="btn btn-small btn-icon edit-client-btn" title="Editar" data-id="1"><i class="fas fa-edit"></i></button>
                                    <button class="btn btn-small btn-icon message-client-btn" title="Mensagem" data-id="1"><i class="fas fa-comment"></i></button>
                                </td>
                            </tr>
                            <tr data-id="2" class="client-row" data-status="active" data-service="comportamento">
                                <td class="client-info-cell">
                                    <section class="client-avatar" style="background-image: url('https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=80&h=80&fit=crop&crop=face');"></section>
                                    <section class="client-basic-info">
                                        <h4>Pedro Mendes</h4>
                                        <p><i class="fas fa-phone"></i> (11) 97654-3210</p>
                                    </section>
                                </td>
                                <td>
                                    <span class="pet-tag dog">Luna</span>
                                    <p class="pet-breed">Border Collie, 1 ano</p>
                                </td>
                                <td>Comportamento Avançado</td>
                                <td>15/01/2025</td>
                                <td><span class="status-badge active">Ativo</span></td>
                                <td>
                                    <section class="progress-bar">
                                        <section class="progress" style="width: 60%;"></section>
                                    </section>
                                    <span class="progress-text">6/10 sessões</span>
                                </td>
                                <td class="actions-cell">
                                    <button class="btn btn-small btn-icon view-details-btn" title="Ver Detalhes" data-id="2"><i class="fas fa-eye"></i></button>
                                    <button class="btn btn-small btn-icon edit-client-btn" title="Editar" data-id="2"><i class="fas fa-edit"></i></button>
                                    <button class="btn btn-small btn-icon message-client-btn" title="Mensagem" data-id="2"><i class="fas fa-comment"></i></button>
                                </td>
                            </tr>
                            <tr data-id="3" class="client-row" data-status="active" data-service="socializacao">
                                <td class="client-info-cell">
                                    <section class="client-avatar" style="background-image: url('https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=80&h=80&fit=crop&crop=face');"></section>
                                    <section class="client-basic-info">
                                        <h4>Mariana Costa</h4>
                                        <p><i class="fas fa-phone"></i> (11) 95432-1098</p>
                                    </section>
                                </td>
                                <td>
                                    <span class="pet-tag dog">Max</span>
                                    <p class="pet-breed">Labrador, 3 anos</p>
                                </td>
                                <td>Socialização</td>
                                <td>05/02/2025</td>
                                <td><span class="status-badge active">Ativo</span></td>
                                <td>
                                    <section class="progress-bar">
                                        <section class="progress" style="width: 40%;"></section>
                                    </section>
                                    <span class="progress-text">4/10 sessões</span>
                                </td>
                                <td class="actions-cell">
                                    <button class="btn btn-small btn-icon view-details-btn" title="Ver Detalhes" data-id="3"><i class="fas fa-eye"></i></button>
                                    <button class="btn btn-small btn-icon edit-client-btn" title="Editar" data-id="3"><i class="fas fa-edit"></i></button>
                                    <button class="btn btn-small btn-icon message-client-btn" title="Mensagem" data-id="3"><i class="fas fa-comment"></i></button>
                                </td>
                            </tr>
                            <tr data-id="4" class="client-row" data-status="pending" data-service="obediencia">
                                <td class="client-info-cell">
                                    <section class="client-avatar" style="background-image: url('https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=80&h=80&fit=crop&crop=face');"></section>
                                    <section class="client-basic-info">
                                        <h4>Rodrigo Alves</h4>
                                        <p><i class="fas fa-phone"></i> (11) 98765-1234</p>
                                    </section>
                                </td>
                                <td>
                                    <span class="pet-tag dog">Thor</span>
                                    <p class="pet-breed">Pastor Alemão, 8 meses</p>
                                </td>
                                <td>Obediência Básica</td>
                                <td>25/02/2025</td>
                                <td><span class="status-badge pending">Pendente</span></td>
                                <td>
                                    <section class="progress-bar">
                                        <section class="progress" style="width: 0%;"></section>
                                    </section>
                                    <span class="progress-text">0/10 sessões</span>
                                </td>
                                <td class="actions-cell">
                                    <button class="btn btn-small btn-accept accept-client-btn" title="Aceitar" data-id="4"><i class="fas fa-check"></i></button>
                                    <button class="btn btn-small btn-reject reject-client-btn" title="Recusar" data-id="4"><i class="fas fa-times"></i></button>
                                    <button class="btn btn-small btn-icon message-client-btn" title="Mensagem" data-id="4"><i class="fas fa-comment"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </section>

                <!-- Grid View (Hidden by default) -->
                <section class="clients-grid" id="clientsGrid" style="display: none;">
                    <!-- Grid content will be populated dynamically -->
                </section>

                <section class="pagination">
                    <button class="pagination-btn" disabled><i class="fas fa-chevron-left"></i></button>
                    <button class="pagination-btn active">1</button>
                    <button class="pagination-btn">2</button>
                    <button class="pagination-btn">3</button>
                    <button class="pagination-btn"><i class="fas fa-chevron-right"></i></button>
                </section>
            </section>
        </section>
    </main>

    <!-- Client Details Modal -->
    <section class="modal" id="clienteDetailsModal">
        <section class="modal-content">
            <section class="modal-header">
                <h2>Detalhes do Cliente</h2>
                <button class="modal-close" id="closeDetailsModal">&times;</button>
            </section>
            <section class="modal-body" id="clientDetailsContent">
                <!-- Modal content for client details -->
                <p>Carregando detalhes do cliente...</p>
            </section>
            <section class="modal-footer">
                <button class="btn btn-secondary" id="closeDetailsBtn">Fechar</button>
                <button class="btn btn-primary">Agendar Sessão</button>
                <button class="btn btn-outlined">Enviar Mensagem</button>
            </section>
        </section>
    </section>

    <!-- Add/Edit Client Modal -->
    <section class="modal" id="clienteFormModal">
        <section class="modal-content">
            <section class="modal-header">
                <h2 id="formModalTitle">Adicionar Novo Cliente</h2>
                <button class="modal-close" id="closeFormModal">&times;</button>
            </section>
            <section class="modal-body">
                <form id="clienteForm">
                    <section class="form-tabs">
                        <button type="button" class="form-tab-btn active" data-tab="cliente-info">Informações do Cliente</button>
                        <button type="button" class="form-tab-btn" data-tab="pet-info">Informações do Pet</button>
                        <button type="button" class="form-tab-btn" data-tab="servico-info">Serviço</button>
                    </section>
                    
                    <section class="form-tab-content active" id="cliente-info-tab">
                        <section class="form-row">
                            <section class="form-group">
                                <label for="nomeCliente">Nome Completo*</label>
                                <input type="text" id="nomeCliente" name="nomeCliente" required>
                            </section>
                            <section class="form-group">
                                <label for="telefoneCliente">Telefone*</label>
                                <input type="tel" id="telefoneCliente" name="telefoneCliente" required>
                            </section>
                        </section>
                        <section class="form-row">
                            <section class="form-group">
                                <label for="emailCliente">Email*</label>
                                <input type="email" id="emailCliente" name="emailCliente" required>
                            </section>
                            <section class="form-group">
                                <label for="enderecoCliente">Endereço</label>
                                <input type="text" id="enderecoCliente" name="enderecoCliente">
                            </section>
                        </section>
                    </section>
                    
                    <section class="form-tab-content" id="pet-info-tab">
                        <section class="form-row">
                            <section class="form-group">
                                <label for="nomePet">Nome do Pet*</label>
                                <input type="text" id="nomePet" name="nomePet" required>
                            </section>
                            <section class="form-group">
                                <label for="racaPet">Raça*</label>
                                <input type="text" id="racaPet" name="racaPet" required>
                            </section>
                        </section>
                        <section class="form-row">
                            <section class="form-group">
                                <label for="idadePet">Idade*</label>
                                <input type="text" id="idadePet" name="idadePet" placeholder="Ex: 2 anos" required>
                            </section>
                            <section class="form-group">
                                <label for="tipoPet">Tipo*</label>
                                <select id="tipoPet" name="tipoPet" required>
                                    <option value="">Selecione</option>
                                    <option value="dog">Cão</option>
                                    <option value="cat">Gato</option>
                                </select>
                            </section>
                        </section>
                    </section>
                    
                    <section class="form-tab-content" id="servico-info-tab">
                        <section class="form-row">
                            <section class="form-group">
                                <label for="tipoServico">Tipo de Serviço*</label>
                                <select id="tipoServico" name="tipoServico" required>
                                    <option value="">Selecione</option>
                                    <option value="obediencia">Obediência Básica</option>
                                    <option value="comportamento">Comportamento Avançado</option>
                                    <option value="socializacao">Socialização</option>
                                    <option value="problemas">Correção de Problemas Específicos</option>
                                    <option value="outro">Outro</option>
                                </select>
                            </section>
                            <section class="form-group">
                                <label for="totalSessoes">Total de Sessões*</label>
                                <input type="number" id="totalSessoes" name="totalSessoes" min="1" value="10" required>
                            </section>
                        </section>
                        <section class="form-row">
                            <section class="form-group">
                                <label for="dataInicio">Data de Início*</label>
                                <input type="date" id="dataInicio" name="dataInicio" required>
                            </section>
                            <section class="form-group">
                                <label for="frequencia">Frequência*</label>
                                <select id="frequencia" name="frequencia" required>
                                    <option value="semanal">Semanal</option>
                                    <option value="quinzenal">Quinzenal</option>
                                    <option value="mensal">Mensal</option>
                                    <option value="personalizado">Personalizado</option>
                                </select>
                            </section>
                        </section>
                        <section class="form-row">
                            <section class="form-group">
                                <label for="valorSessao">Valor por Sessão (R$)*</label>
                                <input type="number" id="valorSessao" name="valorSessao" min="0" step="0.01" required>
                            </section>
                            <section class="form-group">
                                <label for="formaPagamento">Forma de Pagamento*</label>
                                <select id="formaPagamento" name="formaPagamento" required>
                                    <option value="individual">Por Sessão</option>
                                    <option value="pacote">Pacote Completo</option>
                                    <option value="mensal">Mensalidade</option>
                                </select>
                            </section>
                        </section>
                        <section class="form-group">
                            <label for="observacoesServico">Detalhes do Serviço/Problemas a Tratar</label>
                            <textarea id="observacoesServico" name="observacoesServico" rows="3"></textarea>
                        </section>
                        <section class="form-group">
                            <label>Objetivos do Treinamento</label>
                            <section class="checkbox-group">
                                <label><input type="checkbox" name="objetivos" value="comandos"> Comandos Básicos</label>
                                <label><input type="checkbox" name="objetivos" value="puxar"> Parar de Puxar na Coleira</label>
                                <label><input type="checkbox" name="objetivos" value="socializacao"> Socialização com Outros Cães</label>
                                <label><input type="checkbox" name="objetivos" value="ansiedade"> Redução de Ansiedade</label>
                                <label><input type="checkbox" name="objetivos" value="agressividade"> Controle de Agressividade</label>
                                <label><input type="checkbox" name="objetivos" value="destruicao"> Comportamento Destrutivo</label>
                            </section>
                        </section>
                    </section>
                </form>
            </section>
            <section class="modal-footer">
                <button class="btn btn-secondary modal-close-btn" id="cancelFormBtn">Cancelar</button>
                <button class="btn btn-primary" id="saveClienteBtn">Salvar</button>
            </section>
        </section>
    </section>

    <script src="/js/script-adestradorcliente.js"></script>

       
</body>
</html>