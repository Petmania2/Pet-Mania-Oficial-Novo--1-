    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <section class="container">
            <section class="messages-container">
                <!-- Contacts Sidebar -->
                <section class="contacts-sidebar">
                    <section class="search-box">
                        <i class="fas fa-search"></i>
