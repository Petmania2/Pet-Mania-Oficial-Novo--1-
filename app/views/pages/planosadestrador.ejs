    <!-- Sistema de pagamento customizado -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Sistema de pagamento simplificado
        document.querySelectorAll('.btn-plan').forEach(btn => {
            btn.addEventListener('click', async function() {
                if (this.classList.contains('current-plan') || this.classList.contains('btn-renew')) {
                    return;
                }
                
                const plan = this.getAttribute('data-plan');
                const valor = this.getAttribute('data-valor');
                
                if (!plan || !valor) return;
                
                this.disabled = true;
                this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processando...';
                
                const descricao = `Plano ${plan.charAt(0).toUpperCase() + plan.slice(1)} - Pet Mania`;
                
                try {
                    const response = await fetch('/criar-pagamento', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ descricao, valor })
                    });
                    
                    const result = await response.json();
                    
                    if (result.checkout_url) {
                        window.location.href = result.checkout_url;
                    } else {
                        alert('Erro ao criar pagamento. Tente novamente.');
                        this.disabled = false;
                        this.innerHTML = 'Assinar Plano';
                    }
                } catch (error) {
                    alert('Erro de conexão. Tente novamente.');
                    this.disabled = false;
                    this.innerHTML = 'Assinar Plano';
                }
            });
        });
    });
    </script>
